<html>

<head>
<style>
body {background-color:#F1F1F1}

table {
    width:90%;
}
table, th, td {
    border: #00ffffff;
    border-collapse: collapse;
    text-align: center;
}
th, td {
    padding: 5px;
}

table#t01 tr:nth-child(3n+0) {
    font-size: 100%;
    color: black;
    text-align: left;

}
table#t01 tr:nth-child(3n+1) {
    font-size: 80%;
    font-weight: bold;
}
table#t01 tr:nth-child(3n+2) {
   background-color: #ffffff;
    font-size: 150%;
}
table#t01 th  {
    background-color: #006EA7;
    font-size: 200%;
    color: white;
}
</style>
</head>
<h1 ALIGN="center"> ISNews Digest!</h1>
<table id="t01" align="center">
  #foreach( $news in $newsAll )
  <tr>
    <th>$news.title ($topicName)</th>
  </tr>
  <tr>
    <td style="text-align: left">
       #foreach( $highlight in $news.highlights )
          <li>${highlight}</li>
      #end   
    </td>
  </tr>
  <tr>
    <td>$news.content</td>
  </tr>
  <tr>
    <td style="text-align: center"><img src=$news.photos alt="image" style="max-width:300px;max-height:300px"></td>
  </tr>
  #end
</table>
<div style="text-align: center; display:block;">
	<a href="http://localhost:8888/Unsubscribe">Unsubscribe</a>
</div>
</body>
</html>